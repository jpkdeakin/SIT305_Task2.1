<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/unit_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit Type" />

    <Spinner
        android:id="@+id/unit_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/unit_types" />

    <TextView
        android:id="@+id/source_unit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source Unit" />

    <Spinner
        android:id="@+id/source_unit_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/length_units" />

    <TextView
        android:id="@+id/destination_unit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Unit" />

    <Spinner
        android:id="@+id/destination_unit_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/length_units" />

    <EditText
        android:id="@+id/value_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Enter value to convert"/>


    <Button
        android:id="@+id/convert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"/>


    <TextView
        android:id="@+id/result_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Converted Value"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/results_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="" />

    </LinearLayout>

</LinearLayout>